<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:background="?selectableItemBackground"
    android:minHeight="?listPreferredItemHeightSmall">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <tk.zwander.rootactivitylauncher.views.RecycledImageView
            android:id="@+id/activity_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            tools:src="@mipmap/ic_launcher"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorPrimary"
                tools:text="@string/app_name"
                />

            <TextView
                android:id="@+id/activity_cmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="tk.zwander.rootactivitylauncher/.MainActivity"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/set_extras"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_more_horiz_24"
            android:background="?android:selectableItemBackground"
            />

        <ImageButton
            android:id="@+id/disable"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_toggle_off_24"
            android:background="?android:selectableItemBackground"
            />

        <ImageButton
            android:id="@+id/enable"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_toggle_on_24"
            android:background="?android:selectableItemBackground"
            />

    </LinearLayout>

</LinearLayout>